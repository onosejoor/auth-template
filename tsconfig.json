{
  "compilerOptions": {
    "target": "ES2020",                     // minimum for private fields support
    "module": "CommonJS",                   // for Node.js compatibility
    "esModuleInterop": true,                // âœ… required for default imports like 'fs' or 'path'
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["cmd"],
  "exclude": ["dist", "node_modules"]
}
